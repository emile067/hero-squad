{{#partial "title"}}Add hero{{/partial}}

{{#partial "content"}}
    <h1>Add a hero:</h1>
    <div class="container">
    <form action="/hero" method="post">
        <label for="heroName">Enter the hero's name</label>
        <input class="form-control" type="text" id="heroName" name="heroName">
        <label for="heroPower">Enter the hero's super power</label>
        <input class="form-control" type="text" id="heroPower" name="heroPower">
        <label for="heroWeakness">Enter the hero's weakness</label>
        <input class="form-control" type="text" id="heroWeakness" name="heroWeakness">
        <label for="heroAge">Enter the hero's age</label>
        <input class="form-control" type="text" id="heroAge" name="heroAge">
        {{#if squads}}
            {{#each squads}}
                {{#if sizeCheck}}
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="heroSquad" id="heroSquad" value="{{id}}">
                    <label class="form-check-label" for="heroSquad">
                        {{squadName}}
                    </label>
                </div>
                {{/if}}
            {{/each}}
        {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
    </div>
{{/partial}}

{{> layout.hbs}}